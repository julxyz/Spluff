<!DOCTYPE html>

<html lang='en'>

	<head>

		{% include './partials/head.njk' %}

		<link rel='stylesheet' href='/css/playlists.css'>

		<script type='module' src='/js/playlists.mjs'></script>

	</head>

	<body>

		<header>

			{% include './partials/header.njk' %}

		</header>

		<main>

			<div id='playlistContainer'>

				<ul>

					{% for playlist in playlists %}
						<li class='playlist' data-id='{{ playlist.id }}'>
							<div class='playlistData'>
								<img src='{{ playlist.image.url }}' width='{{ playlist.image.size }}' height='{{ playlist.image.size }}'>

								<div>
									<span class='playlistName'><a href='{{ playlist.url }}'>{{ playlist.name }}</a></span>
									<span class='playlistDescription'>{{ playlist.description | safe }}</span>
								</div>
							</div>

							<div class='playlistActions'>
								<img class='hidden' src='/resources/icons/done.svg' width='24' height='24'>
								<img class='hidden' src='/resources/icons/error.svg' width='24' height='24'>

								<progress class='hidden'></progress>

								<button class='shuffleButton' type='button'>
									<img src='/resources/icons/shuffle.svg' width='24' height='24'>
									<span>Shuffle</span>
								</button>
							</div>
						</li>
					{% endfor %}

				</ul>

			</div>

		</main>

		<footer>

			{% include './partials/footer.njk' %}

		</footer>

	</body>

</html>
